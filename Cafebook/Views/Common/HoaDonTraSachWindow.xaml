<Window x:Class="Cafebook.Views.Common.HoaDonTraSachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hóa đơn trả sách" Height="600" Width="420"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        WindowStyle="ToolWindow" FontFamily="Consolas, Segoe UI" FontSize="13">

    <Grid Margin="15" Grid.IsSharedSizeScope="True" x:Name="printArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header chung -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="CAFEBOOK" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblDiaChi" Text="Địa chỉ: ..." HorizontalAlignment="Center" FontSize="11"/>
            <TextBlock x:Name="lblSdt" Text="SĐT: ..." HorizontalAlignment="Center" FontSize="11" Margin="0,0,0,10"/>
            <TextBlock Text="HÓA ĐƠN TRẢ SÁCH" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,10"/>
            <TextBlock x:Name="lblMaPhieu" Text="Mã phiếu thuê: #" HorizontalAlignment="Center" FontSize="11"/>
            <Separator Margin="0,10,0,5"/>
        </StackPanel>

        <!-- Nội dung hóa đơn -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock x:Name="lblTenKhach" Text="Khách hàng: "/>
            <TextBlock x:Name="lblTenSach" Text="Sách đã thuê: " TextWrapping="Wrap" Margin="0,5,0,0"/>
            <TextBlock x:Name="lblNgayTra" Text="Ngày trả: " Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Tổng kết phí -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="ColThanhTien"/>
            </Grid.ColumnDefinitions>
            <Separator Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Phí thuê sách:" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblPhiThue" TextAlignment="Right"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Phí phạt trễ hạn:" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblTienPhat" TextAlignment="Right" Foreground="Red"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Hoàn cọc:" HorizontalAlignment="Right" Foreground="Green"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblTienCoc" TextAlignment="Right" Foreground="Green"/>
            <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,5"/>
        </Grid>

        <!-- Tổng tiền cuối -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="ColThanhTien"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="lblTongTienTitle" Text="Tổng tiền thu thêm:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
            <TextBlock Grid.Column="1" x:Name="lblTongTien" Text="0 VND" FontSize="16" FontWeight="Bold" TextAlignment="Right"/>
        </Grid>

        <!-- Nút bấm -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Bottom">
            <Button x:Name="btnPrint" Content="In Hóa Đơn" Width="120" Height="40" Margin="5" Click="InHoaDon_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="120" Height="40" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>