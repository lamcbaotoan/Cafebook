<Window x:Class="Cafebook.Views.Common.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chào mừng" Height="260" Width="520"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid>
        <!-- Dim background -->
        <Border Background="#B3000000" CornerRadius="10"/>

        <!-- Card -->
        <Border Width="440" Height="180" CornerRadius="12" Background="White"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="18">
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="18" Opacity="0.18" ShadowDepth="6"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Shimmer text -->
                <Viewbox Grid.Row="0" Height="50" Margin="0,0,0,6">
                    <TextBlock x:Name="txtWelcome" Text="CHÀO MỪNG" FontWeight="Bold" FontFamily="Segoe UI" 
                               TextAlignment="Center" TextWrapping="Wrap" />
                </Viewbox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <!-- Spinner -->
                    <Grid Width="48" Height="48" Margin="0,0,14,0">
                        <Ellipse Width="48" Height="48" Stroke="#EFEFEF" StrokeThickness="6"/>
                        <!-- Set Stroke color directly to avoid DynamicResource fallback issues -->
                        <Path x:Name="SpinnerArc" Data="M24,2 A22,22 0 0 1 46,24" Stroke="#007ACC" StrokeThickness="6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtUserGreeting" Text="Xin chào, [Tên]" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBlock x:Name="txtSub" Text="Đang load trang của bạn..." FontSize="12" Foreground="#666" Margin="0,6,0,0"/>
                        <!-- Animated progress bar (indeterminate) -->
                        <ProgressBar Width="260" Height="8" IsIndeterminate="True" Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Optional close hint -->
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="11" Foreground="#999" Margin="0,6,6,0" Text="Đang chuyển tiếp — hãy chờ..." />
            </Grid>
        </Border>
    </Grid>
</Window>
