<Page x:Class="Cafebook.Views.admin.pages.NhanSuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cafebook.Views.admin.pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1050"
      Title="NhanSuView" FontFamily="Segoe UI" Loaded="Page_Loaded">
    <TabControl>
        <TabItem Header="Danh sách Nhân viên">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0" x:Name="dgNhanVien" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgNhanVien_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="*"/>
                        <DataGridTextColumn Header="Vai trò" Binding="{Binding TenVaiTro}" Width="120"/>
                        <DataGridTextColumn Header="Lương/giờ" Binding="{Binding MucLuongTheoGio, StringFormat=N0}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Đang làm" Binding="{Binding TrangThai}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Width="350" Margin="10,0,0,0">
                        <GroupBox Header="Thông tin chi tiết">
                            <StackPanel Margin="5">
                                <Label Content="Họ tên:"/>
                                <TextBox x:Name="txtHoTen" Margin="0,0,0,5"/>
                                <Label Content="Mật khẩu:"/>
                                <PasswordBox x:Name="txtMatKhau" Margin="0,0,0,5"/>
                                <Label Content="Mức lương/giờ (VND):"/>
                                <TextBox x:Name="txtMucLuong" Margin="0,0,0,5"/>
                                <Label Content="Vai trò:"/>
                                <ComboBox x:Name="cmbVaiTro" DisplayMemberPath="TenVaiTro" SelectedValuePath="IdVaiTro" Margin="0,0,0,5"/>
                                <CheckBox x:Name="chkTrangThai" Content="Đang làm việc" Margin="0,5,0,10"/>
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="btnLamMoiNV" Content="Làm mới" Margin="5" Padding="10,5" Click="BtnLamMoiNV_Click"/>
                            <Button x:Name="btnThemNV" Content="Thêm" Margin="5" Padding="10,5" Click="BtnThemNV_Click"/>
                            <Button x:Name="btnLuuNV" Content="Lưu" Margin="5" Padding="10,5" Click="BtnLuuNV_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </TabItem>

        <TabItem Header="Lịch làm việc">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Calendar x:Name="calLichLamViec" SelectedDatesChanged="CalLichLamViec_SelectedDatesChanged"/>
                    <GroupBox Header="Thêm lịch làm việc" Margin="0,10,0,0">
                        <StackPanel Margin="5">
                            <Label Content="Chọn nhân viên:"/>
                            <ComboBox x:Name="cmbNhanVien_Lich" DisplayMemberPath="HoTen" SelectedValuePath="IdNhanVien" Margin="0,0,0,5"/>
                            <Label Content="Chọn ca:"/>
                            <ComboBox x:Name="cmbCaLamViec_Lich" DisplayMemberPath="TenCa" SelectedValuePath="IdCa" Margin="0,0,0,5"/>
                            <Button x:Name="btnThemLich" Content="Thêm Lịch" Margin="0,10,0,0" Padding="10,5" Click="BtnThemLich_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="lblNgayDaChon" Text="Lịch làm việc ngày: " FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Button x:Name="btnXoaLich" Content="Xóa Lịch đã chọn" Margin="20,0,0,0" Padding="10,5" Background="IndianRed" Foreground="White" Click="BtnXoaLich_Click"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" x:Name="dgLichLamViec" Margin="0,10,0,0" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nhân viên" Binding="{Binding HoTenNhanVien}" Width="*"/>
                            <DataGridTextColumn Header="Ca làm" Binding="{Binding TenCa}" Width="120"/>
                            <DataGridTextColumn Header="Bắt đầu" Binding="{Binding GioBatDau}" Width="100"/>
                            <DataGridTextColumn Header="Kết thúc" Binding="{Binding GioKetThuc}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </TabItem>

        <TabItem Header="Thiết lập Lương &amp; Chính sách">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0" x:Name="dgThuongPhat" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgThuongPhat_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên Loại" Binding="{Binding TenLoai}" Width="*"/>
                        <DataGridTextColumn Header="Số tiền" Binding="{Binding SoTien, StringFormat=N0}" Width="120"/>
                        <DataGridTextColumn Header="Loại" Binding="{Binding Loai}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1" Width="300" Margin="10,0,0,0">
                    <GroupBox Header="Thêm/Sửa Chính sách">
                        <StackPanel Margin="10">
                            <Label Content="Tên chính sách (vd: Phạt đi trễ, Thưởng chuyên cần)"/>
                            <TextBox x:Name="txtTenChinhSach" Margin="0,0,0,10"/>
                            <Label Content="Số tiền (VND):"/>
                            <TextBox x:Name="txtSoTienChinhSach" Margin="0,0,0,10"/>
                            <Label Content="Loại:"/>
                            <ComboBox x:Name="cmbLoaiChinhSach" Margin="0,0,0,15">
                                <ComboBoxItem Content="Thuong"/>
                                <ComboBoxItem Content="Phat"/>
                            </ComboBox>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnLamMoiCS" Content="Làm mới" Margin="5" Padding="10,5" Click="BtnLamMoiCS_Click"/>
                                <Button x:Name="btnThemCS" Content="Thêm" Margin="5" Padding="10,5" Click="BtnThemCS_Click"/>
                                <Button x:Name="btnLuuCS" Content="Lưu" Margin="5" Padding="10,5" Click="BtnLuuCS_Click"/>
                                <Button x:Name="btnXoaCS" Content="Xóa" Margin="5" Padding="10,5" Background="IndianRed" Foreground="White" Click="BtnXoaCS_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Header="Chấm công &amp; Phiếu lương">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Bảng chấm công chi tiết">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="Xem ngày:" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpNgayChamCong" SelectedDateChanged="DpNgayChamCong_SelectedDateChanged"/>
                            <Button Content="Tự động phạt đi trễ" Margin="10,0" Padding="10,3" ToolTip="Tự động thêm khoản phạt cho các nhân viên vào ca trễ hơn 15 phút trong ngày đã chọn" Click="BtnTuDongPhat_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="dgChamCong" MaxHeight="450" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nhân viên" Binding="{Binding HoTenNhanVien}" Width="*"/>
                                <DataGridTextColumn Header="Giờ vào" Binding="{Binding GioVao, StringFormat='HH:mm:ss'}" Width="100"/>
                                <DataGridTextColumn Header="Giờ ra" Binding="{Binding GioRa, StringFormat='HH:mm:ss'}" Width="100"/>
                                <DataGridTextColumn Header="Tổng giờ" Binding="{Binding SoGioLam, StringFormat=N2}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Tính và Chốt Lương" Margin="10,0,0,0">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <Label Content="Chọn nhân viên:"/>
                                <ComboBox x:Name="cmbNhanVien_Luong" DisplayMemberPath="HoTen" SelectedValuePath="IdNhanVien" SelectionChanged="CmbNhanVien_Luong_SelectionChanged"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Content="Từ ngày:"/>
                                    <DatePicker x:Name="dpTuNgay"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Content="Đến ngày:" Margin="0,0,4,0"/>
                                    <DatePicker x:Name="dpDenNgay"/>
                                </StackPanel>
                                <Button Content="TÍNH LƯƠNG TẠM TÍNH" Margin="0,10,0,0" Padding="8" FontWeight="Bold" Click="BtnTinhLuong_Click"/>
                            </StackPanel>
                            <Border Grid.Column="1" Margin="5,0,0,0" Background="WhiteSmoke" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="CHI TIẾT LƯƠNG" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock>Lương theo giờ: <Run x:Name="runLuongTheoGio" FontWeight="SemiBold"/></TextBlock>
                                    <TextBlock>Tổng giờ làm: <Run x:Name="runTongGioLam" FontWeight="SemiBold"/></TextBlock>
                                    <TextBlock>Tổng thưởng: <Run x:Name="runTongThuong" FontWeight="SemiBold" Foreground="Green"/></TextBlock>
                                    <TextBlock>Tổng phạt: <Run x:Name="runTongPhat" FontWeight="SemiBold" Foreground="Red"/></TextBlock>
                                    <Separator Margin="0,5"/>
                                    <TextBlock FontSize="16" FontWeight="Bold">Thực lãnh: <Run x:Name="runThucLanh" Foreground="Blue"/></TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Button x:Name="btnChotLuong" Content="CHỐT LƯƠNG VÀ TẠO PHIẾU LƯƠNG" Margin="0,15,0,0" Padding="10" FontWeight="Bold" Background="ForestGreen" Foreground="White" IsEnabled="False" Click="BtnChotLuong_Click"/>

                        <DataGrid x:Name="dgPhieuLuong" Margin="0,10,0,0" IsReadOnly="True" AutoGenerateColumns="False" MaxHeight="200"
                                  ToolTip="Lịch sử các phiếu lương đã chốt của nhân viên được chọn">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Kỳ Lương" Binding="{Binding TuNgay, StringFormat='{}{0:MM/yyyy}'}" Width="*"/>
                                <DataGridTextColumn Header="Thực Lãnh" Binding="{Binding ThucLanh, StringFormat=N0}" Width="120"/>
                                <DataGridTextColumn Header="Ngày Chốt" Binding="{Binding NgayTinhLuong, StringFormat='dd/MM/yyyy'}" Width="120"/>
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Xem" Margin="5,2" Click="BtnXemPhieuLuong_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </TabItem>
    </TabControl>
</Page>