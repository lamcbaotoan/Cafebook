<Window x:Class="Cafebook.Views.Common.PhieuLuongPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xem trước Phiếu Lương" Height="600" Width="450"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        WindowStyle="ToolWindow" FontFamily="Consolas, Segoe UI" FontSize="13">

    <Grid Margin="15" Grid.IsSharedSizeScope="True" x:Name="printArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="CAFEBOOK" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblDiaChi" Text="Địa chỉ: ..." HorizontalAlignment="Center" FontSize="11"/>
            <TextBlock x:Name="lblSdt" Text="SĐT: ..." HorizontalAlignment="Center" FontSize="11" Margin="0,0,0,10"/>
            <TextBlock x:Name="lblTieuDeChinh" Text="PHIẾU LƯƠNG" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nhân viên:" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblNhanVien" TextAlignment="Right" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Kỳ lương:"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblKyLuong" TextAlignment="Right"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ngày chốt:"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblNgayChot" TextAlignment="Right"/>
            </Grid>
            <Separator Margin="0,10,0,5"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="ColTienLuong"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="1. Lương theo giờ" FontSize="14" FontWeight="SemiBold"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="   - Tổng giờ làm:" Margin="15,2,0,2"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblTongGioLam" TextAlignment="Right"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="   - Lương cơ bản:" Margin="15,2,0,10"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblLuongCoBan" TextAlignment="Right" FontWeight="SemiBold"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="2. Các khoản thưởng" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblTongThuong" TextAlignment="Right" Foreground="Green" FontWeight="SemiBold"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="3. Các khoản phạt" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblTongPhat" TextAlignment="Right" Foreground="Red" FontWeight="SemiBold"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="ColTienLuong"/>
            </Grid.ColumnDefinitions>

            <Separator Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="THỰC LÃNH:" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblThucLanh" FontSize="18" FontWeight="Bold" TextAlignment="Right"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnPrint" Content="In Phiếu lương" Width="120" Height="40" Margin="5" Click="BtnPrint_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="120" Height="40" Margin="5" Click="BtnClose_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>