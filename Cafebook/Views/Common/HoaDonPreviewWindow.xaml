<Window x:Class="Cafebook.Views.Common.HoaDonPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xem trước Hóa đơn" Height="600" Width="420"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" 
        WindowStyle="ToolWindow" FontFamily="Consolas, Segoe UI" FontSize="13">

    <Grid Margin="15" Grid.IsSharedSizeScope="True" x:Name="printArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="CAFEBOOK" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblDiaChi" Text="Địa chỉ: ..." HorizontalAlignment="Center" FontSize="11"/>
            <TextBlock x:Name="lblSdt" Text="SĐT: ..." HorizontalAlignment="Center" FontSize="11" Margin="0,0,0,10"/>
            <Separator/>
            <TextBlock x:Name="lblTieuDeChinh" Text="HÓA ĐƠN TẠM TÍNH" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Bàn số:" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblBanSo" TextAlignment="Right"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ngày giờ:"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblNgayGio" TextAlignment="Right"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Nhân viên:"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblNhanVien" TextAlignment="Right"/>
            </Grid>
            <Separator Margin="0,10,0,5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="icChiTietHoaDon">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColSL"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColDonGia"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColThanhTien"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding TenSanPham}" TextWrapping="Wrap"/>
                            <TextBlock Grid.Column="1" Text="{Binding SoLuong, StringFormat={}{0} x }" Margin="10,0" TextAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="{Binding DonGiaLucBan, StringFormat=N0}" Margin="10,0" TextAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="{Binding ThanhTien, StringFormat=N0}" Margin="10,0" TextAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="ColThanhTien"/>
            </Grid.ColumnDefinitions>

            <Separator Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Tổng tiền:" FontSize="14" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblTongTien" FontSize="14" TextAlignment="Right"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="GIẢM GIÁ:" FontSize="14" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblGiamGia" FontSize="14" TextAlignment="Right"/>

            <Separator Grid.Row="3" Grid.ColumnSpan="2" Margin="0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="THÀNH TIỀN:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblThanhTien" FontSize="16" FontWeight="Bold" TextAlignment="Right"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="btnPrint" Content="In Hóa đơn" Width="120" Height="40" Margin="5" Click="BtnPrint_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="120" Height="40" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>