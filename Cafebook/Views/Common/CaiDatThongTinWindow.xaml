<Window x:Class="Cafebook.Views.Common.CaiDatThongTinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài đặt Thông tin Hiển thị" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Loaded="Window_Loaded">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Địa chỉ hiển thị trên hóa đơn:"/>
            <TextBox x:Name="txtDiaChi" Margin="0,0,0,10"/>
            <Label Content="Số điện thoại hiển thị trên hóa đơn:"/>
            <TextBox x:Name="txtSoDienThoai" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnLuu" Content="Lưu Thay đổi" IsDefault="True" Width="120" Height="35" Click="BtnLuu_Click"/>
                <Button x:Name="btnHuy" Content="Hủy" IsCancel="True" Width="80" Height="35" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>